@* Paso 12 se crea la vista razor se desmarca la casilla de vista parsial y si esta pertenece a layaut se selecciina 
    si se necesitamos movernos a otro controlador se tiene que mover
*@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">
            Lista de Actividades
        </h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"><i class="bi bi-plus-square-fill"></i> Crear Nueva Actividad</a>
    </div>

    <br />

    
    <div class="p-4 border rounded bg-light">
        <table  id="tblDatos_" class="table table-responsive table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Clave</th>
                    <th>Actividad</th>
                    <th>Objetivo</th>
                    <th>Trimestre 1</th>
                    <th>Trimestre 2</th>
                    <th>Trimestre 3</th>
                    <th>Trimestre 4</th>
                    <th>Indicador</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/Capturista/actividad.js"></script>
}